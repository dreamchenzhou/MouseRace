<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/wheel_bg"
     >
    <com.dreamchen.useful.mouserace.view.wheel.AbWheelView
        android:id="@+id/wheel_view_year"
        android:layout_width="80dp"
         android:layout_height="wrap_content"
        android:background="@drawable/wheel_bg_1" 
        />

      <com.dreamchen.useful.mouserace.view.wheel.AbWheelView
        android:id="@+id/wheel_view_month"
        android:layout_width="80dp"
         android:layout_height="wrap_content"
        android:background="@drawable/wheel_bg_1" 
        android:layout_marginLeft="4dp"
        />
      
        <com.dreamchen.useful.mouserace.view.wheel.AbWheelView
        android:id="@+id/wheel_view_day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/wheel_bg_1" 
        android:layout_marginLeft="4dp"
        />
</LinearLayout>
